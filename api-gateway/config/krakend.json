{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "endpoints": [
    {
      "endpoint": "/login",
      "output_encoding": "no-op",
      "input_headers": [
        "User-Agent",
        "Accept",
        "Cookie"
      ],
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/login",
          "host": [
            "http://authentication-service:9000"
          ]
        }
      ]
    },
    {
      "endpoint": "/register",
      "output_encoding": "no-op",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/register",
          "host": [
            "http://authentication-service:9000"
          ]
        }
      ]
    }, {
      "endpoint": "/posts",
      "output_encoding": "no-op",
      "method": "POST",
      "input_headers": [
        "User-Agent",
        "Accept",
        "Cookie"
      ],
      "backend": [
        {
          "url_pattern": "/posts",
          "host": [
            "http://post-service:9001"
          ]
        }
      ]
    }
  ],
  "extra_config": { }
}
